<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnNowaTrasa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onClickBtnNowaTrasa"
        android:text="Rozpocznij nową trasę" />

    <Button
        android:id="@+id/btnKontynuujTrase"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onClickBtnKontynuujTrase"
        android:text="Kontynuuj poprzednią trasę" />

    <Button
        android:id="@+id/btnPrzegladTras"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onClickBtnPrzegladTras"
        android:text="Wyszukaj trasę" />
</LinearLayout>